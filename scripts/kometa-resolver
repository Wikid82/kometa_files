#!/usr/bin/env bash
# Convenience wrapper for Kometa MediUX Resolver
# Tries to use .venv/bin/python3 if present, otherwise falls back to system python3.

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VENV_PY="$SCRIPT_DIR/../.venv/bin/python3"

if [ -x "$VENV_PY" ]; then
  exec "$VENV_PY" "$SCRIPT_DIR/kometa_mediux_resolver/kometa_mediux_resolver.py" "$@"
else
  exec python3 "$SCRIPT_DIR/kometa_mediux_resolver/kometa_mediux_resolver.py" "$@"
fi
